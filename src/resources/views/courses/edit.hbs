<div class="mt-4">
    <h3>Sửa Khóa Học</h3>
    <form method="POST" action="/courses/{{course._id}}">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input name="name" type="text" class="form-control" value="{{course.name}}" id="name">
        </div>
           <div class="form-group">
            <label for="title">Title</label>
            <input name="title" type="text" class="form-control" value="{{course.title}}" id="title">
        </div>
      
         <div class="form-group">
            <label for="videoId">ID video</label>
            <input name="videoId" type="text" class="form-control" value="{{course.videoId}}" id="videoId">
        </div>
      
         <div class="form-group">
            <label for="level">Level</label>
            <input name="level" type="text" class="form-control" value="{{course.level}}" id="level">
        </div>
      
      
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>